<core:View xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:ui="sap.ca.ui"
	controllerName="sap.ca.ui.sample.views.control.Notes">
	<Page id="page">
		<content>
			<ui:Notes growing="true" growingThreshold="4" showNoteInput="true"
				items="{/comments}" textMaxLength="1000" addNote="_handleAddNote">
				<ui:ExpansibleFeedListItem senderPress="_openPopover"
					iconPress="_openPopover" sender="{sender}" text="{text}" timestamp="{timestamp}"
					icon="{icon}" info="{info}" maxLines="3"></ui:ExpansibleFeedListItem>
			</ui:Notes>
		</content>
		<footer>
			<Bar>
			</Bar>
		</footer>
	</Page>
</core:View>