<core:View controllerName="AppPersSample2.App" xmlns:core="sap.ui.core"
	xmlns="sap.m" xmlns:table="sap.m.table">
	<VBox>
		<Panel headerText="Sample Application for Personalization: Case 2: Table">
			<Table id="SampleTableMobile" headerText="Table header"
				showSeparators="Inner" items="{ path : '/rows' }">
				<headerToolbar>
					<Toolbar>
						<Label text="Test Table for Personalization"></Label>
						<ToolbarSpacer></ToolbarSpacer>
						<Button id="personalize" icon="sap-icon://table-view" />
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column width="100px">
						<Label text="Column 1" />
					</Column>
					<Column width="150px">
						<Label text="Column 2" />
					</Column>
					<Column width="200px">
						<Label text="Column 3" />
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<Text text="{cell1}" />
							<Text text="{cell2}" />
							<Text text="{cell3}" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</Panel>
	</VBox>
</core:View>
